<UserControl x:Class="kiosk_snapprint.tray_connection_unique"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:kiosk_snapprint"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Loaded="UserControl_Loaded">
    <Grid Background="White">

        <!-- Define two rows -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- First row for StackPanel -->
            <RowDefinition Height="Auto"/>
            <!-- Second row for ProgressBar -->
        </Grid.RowDefinitions>

        <!-- StackPanel placed in the first row -->
        <StackPanel 
                    VerticalAlignment="Center" 
                    HorizontalAlignment="Center" 
                    Background="White" 
                    Width="390" 
                    Height="440" RenderTransformOrigin="0.297,0.457">
            <TextBlock TextAlignment="Center" 
                      FontSize="30" 
                      VerticalAlignment="Center"
                      Text="PROCESSING"
                      FontWeight="Bold"
                      Height="55"
                      Width="240" 
                      TextTrimming="CharacterEllipsis" />
            <Image Height="235" 
                   Width="249" 
                   Source="/pdficon.png" 
                   Stretch="Fill"/>
            <TextBlock FontSize="15"
                       x:Name="filename"
                       FontWeight="Bold"
                       Height="40"
                       Width="305"
                       TextTrimming="CharacterEllipsis" />
            <!-- ProgressBar placed in the second row -->
            <ProgressBar x:Name="progressBar" 
              Grid.Row="1" 
              Margin="0,10,0,0" 
              Height="20" 
              HorizontalAlignment="Center" 
              VerticalAlignment="Top" 
              Minimum="0" 
              Maximum="100" 
              IsIndeterminate="True" Width="530" />
        </StackPanel>

        <!-- ProgressBar placed in the second row -->


    </Grid>
</UserControl>
