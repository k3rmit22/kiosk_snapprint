<Window x:Class="kiosk_snapprint.proceedPrinting"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Proceed to Printing" 
        WindowStyle="None" 
        ResizeMode="NoResize" 
        WindowStartupLocation="CenterOwner" 
        Height="450" 
        Width="800" 
        Background="#FFFAFAFA">
    <Border CornerRadius="20" 
            Background="#FFFAFAFA" 
            BorderBrush="#FFCCCCCC" 
            BorderThickness="2"
            Padding="10">
        <Grid Margin="0,-2,0,2">
            <TextBlock Text="Proceed to Printing?"
                       FontSize="36"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Top"
                       Margin="0,10,0,10" />

            <StackPanel VerticalAlignment="Top" Margin="10,100,10,0">
                <TextBlock x:Name="selectedFilePathTextBlock"
                           FontSize="24"
                           HorizontalAlignment="Center"
                           TextWrapping="Wrap"
                           FontWeight="Bold"
                           FontFamily="Franklin Gothic Demi"
                           FontStyle="Italic"
                           Margin="0,5,0,5"
                           Text="Selected File Path" />

                <TextBlock x:Name="paperSizeTextBlock"
                           FontSize="18"
                           HorizontalAlignment="Center"
                           FontWeight="SemiBold"
                           Margin="0,5,0,5"
                           Text="Paper Size: " />

                <TextBlock x:Name="pageCountTextBlock"
                           FontSize="18"
                           HorizontalAlignment="Center"
                           FontWeight="SemiBold"
                           Margin="0,5,0,5"
                           Text="Pages: 0" />

                <TextBlock x:Name="colorStatusTextBlock"
                           FontSize="18"
                           HorizontalAlignment="Center"
                           FontWeight="SemiBold"
                           Margin="0,5,0,5"
                           Text="Color:" />

                <!-- Caution message for page limit -->
                <TextBlock x:Name="cautionTextBlock"
                           FontSize="18"
                           HorizontalAlignment="Center"
                           Foreground="Red"
                           FontWeight="Bold"
                           Margin="0,10,0,0"
                           Visibility="Collapsed"
                           Text="10 pages is the maximum page limit!" />
            </StackPanel>

            <StackPanel Orientation="Horizontal"
            HorizontalAlignment="Center"
            VerticalAlignment="Bottom"
            Margin="0,10,0,10">
                <!-- Confirm Button -->
                <Button x:Name="ConfirmButton"
            Content="Confirm"
            Width="229"
            Height="114"
            Margin="5"
            FontSize="22"
            VerticalAlignment="Center"
            Click="ConfirmButton_Click"
            FontWeight="Bold"
            FontFamily="Franklin Gothic Demi Cond">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="ButtonBorder"
                        Background="Black"
                        CornerRadius="20"
                        BorderBrush="Transparent"
                        BorderThickness="2">
                                <ContentPresenter x:Name="ButtonContent"
                                      HorizontalAlignment="Center" 
                                      VerticalAlignment="Center" 
                                      TextBlock.Foreground="White" />
                            </Border>
                            <ControlTemplate.Triggers>
                                <!-- Hover Trigger -->
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="ButtonBorder" Property="Background" Value="White" />
                                    <Setter TargetName="ButtonBorder" Property="BorderBrush" Value="Black" />
                                    <Setter TargetName="ButtonContent" Property="TextBlock.Foreground" Value="Black" />
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <!-- Cancel Button -->
                <Button x:Name="CancelButton"
            Content="Cancel"
            Width="220"
            Height="114"
            Margin="5"
            FontSize="22"
            VerticalAlignment="Center"
            Click="CancelButton_Click"
            FontWeight="Bold"
            FontFamily="Franklin Gothic Demi">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="ButtonBorder"
                        Background="Black"
                        CornerRadius="20"
                        BorderBrush="Transparent"
                        BorderThickness="2">
                                <ContentPresenter x:Name="ButtonContent"
                                      HorizontalAlignment="Center" 
                                      VerticalAlignment="Center" 
                                      TextBlock.Foreground="White" />
                            </Border>
                            <ControlTemplate.Triggers>
                                <!-- Hover Trigger -->
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="ButtonBorder" Property="Background" Value="White" />
                                    <Setter TargetName="ButtonBorder" Property="BorderBrush" Value="Black" />
                                    <Setter TargetName="ButtonContent" Property="TextBlock.Foreground" Value="Black" />
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>

        </Grid>
    </Border>
</Window>
