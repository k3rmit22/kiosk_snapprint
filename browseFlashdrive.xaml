<UserControl x:Class="kiosk_snapprint.browseFlashdrive"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800"
             Background="#FFFFFF">

    <Grid>
        <!-- Back Button -->
        <Button Content="Back"
                Width="132"
                Height="64"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="26,26,0,0"
                Click="BackButton_Click" Background="White" FontWeight="Bold" FontSize="20" BorderThickness="3,3,3,3" BorderBrush="Black" />

        <!-- Title at the Top -->
        <TextBlock Text="Step 2: SELECT A PDF FILE"
                   FontSize="24"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top"
                   Margin="0,40,0,0" />

        <!-- ListView for PDF Files -->
        <ListView Name="pdfFileListView"
                  Margin="20,116,20,20"
                  BorderThickness="1"
                  Background="#F9F9F9"
                  SelectionChanged="pdfFileListView_SelectionChanged">
            <ListView.BorderBrush>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black"/>
                    <GradientStop Color="White" Offset="1"/>
                </LinearGradientBrush>
            </ListView.BorderBrush>
            <!-- Change the ItemsPanel to a WrapPanel for Horizontal Layout -->
            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel Orientation="Horizontal" />
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>

            <!-- Style for Each Item in the List -->
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Width="150" Margin="10" Orientation="Vertical" HorizontalAlignment="Center">
                        <!-- Larger Icon -->
                        <Image Source="C:\Users\YUJI\source\repos\kiosk_snapprint\pdficon.png" Width="100" Height="100" />
                        <!-- File Name -->
                        <TextBlock Text="{Binding FileName}"
                                   TextAlignment="Center"
                                   TextWrapping="Wrap"
                                   FontSize="14"
                                   Margin="0,5,0,0" />
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <!-- Message Box at Bottom -->
        <TextBlock Name="StatusText"
                   FontSize="14"
                   Foreground="Gray"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Bottom"
                   Margin="0,0,0,10"
                   Visibility="Collapsed" />
    </Grid>
</UserControl>
