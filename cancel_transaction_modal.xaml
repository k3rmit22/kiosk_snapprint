<Window x:Class="kiosk_snapprint.cancel_transaction_modal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Color Confirmation"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Height="300"
        Width="600"
        Background="#FFFAFAFA">
    <Border CornerRadius="20" 
            Background="#FFFAFAFA" 
            BorderBrush="#FFCCCCCC" 
            BorderThickness="5" 
            Padding="10">
        <Grid Margin="0,-2,0,2">
            <TextBlock Text="Do you want to cancel the transaction?" 
                       FontSize="30" 
                       FontWeight="Bold" 
                       TextWrapping="Wrap" 
                       HorizontalAlignment="Left" 
                       VerticalAlignment="Top" 
                       Margin="7,72,0,0"/>

            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Center" 
                        VerticalAlignment="Bottom" 
                        Margin="0,10,0,20">
                <!-- Colored Button -->
                <Button x:Name="NoButton"
                        Content="No"
                        Width="153"
                        Height="78"
                        Margin="5"
                        FontSize="22"
                        VerticalAlignment="Center"
                       
                        FontWeight="Bold"
                        FontFamily="Franklin Gothic Demi Cond" Click="NoButton_Click_1">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="ButtonBorder"
                                    Background="Black"
                                    CornerRadius="20"
                                    BorderBrush="Transparent"
                                    BorderThickness="2">
                                <ContentPresenter x:Name="ButtonContent"
                                                  HorizontalAlignment="Center" 
                                                  VerticalAlignment="Center" 
                                                  TextBlock.Foreground="White" />
                            </Border>
                            <ControlTemplate.Triggers>
                                <!-- Hover Trigger -->
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="ButtonBorder" Property="Background" Value="White" />
                                    <Setter TargetName="ButtonBorder" Property="BorderBrush" Value="Black" />
                                    <Setter TargetName="ButtonContent" Property="TextBlock.Foreground" Value="Black" />
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <!-- Greyscale Button -->
                <Button x:Name="YesButton"
                        Content="Yes"
                        Width="153"
                        Height="78"  
                        Margin="5"    
                        FontSize="22"
                        VerticalAlignment="Center"
                        
                        FontWeight="Bold"
                        FontFamily="Franklin Gothic Demi Cond" Click="YesButton_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="ButtonBorder"
                                    Background="Black"
                                    CornerRadius="20"
                                    BorderBrush="Transparent"
                                    BorderThickness="2">
                                <ContentPresenter x:Name="ButtonContent"
                                                  HorizontalAlignment="Center" 
                                                  VerticalAlignment="Center" 
                                                  TextBlock.Foreground="White" />
                            </Border>
                            <ControlTemplate.Triggers>
                                <!-- Hover Trigger -->
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="ButtonBorder" Property="Background" Value="White" />
                                    <Setter TargetName="ButtonBorder" Property="BorderBrush" Value="Black" />
                                    <Setter TargetName="ButtonContent" Property="TextBlock.Foreground" Value="Black" />
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>
