<Window x:Class="kiosk_snapprint.ColorConfirmationModal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Color Confirmation"
        Height="200" Width="400"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="NoResize" Visibility="Visible" WindowState="Normal"
        Background="White">
    <Grid>
        <TextBlock Text="We Detected that your Pdf File has an colored Content, Do you want to print in Colored or Greyscale?" 
                   FontSize="16" TextWrapping="Wrap" 
                   HorizontalAlignment="Left" VerticalAlignment="Top" 
                   Margin="45,56,0,0"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,120,0,0">
            <Button Content="Colored" Width="80" Margin="10" Click="YesButton_Click"/>
            <Button Content="GreyScale" Width="80" Margin="10" Click="NoButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
